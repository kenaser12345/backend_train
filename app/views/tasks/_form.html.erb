<%= form_with model: task, local: true do |f| %>
  <% if task.errors.any? %>
  <ul>
    <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div>
    <%= f.label :name, '任務名稱' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, '任務內容' %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :start_at %>
    <%= f.datetime_field :start_at %>
  </div>
  <div>
    <%= f.label :end_at %>
    <%= f.datetime_field :end_at %>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.select :status, Task.statuses.keys %>
  </div>
  <div>
    <%= f.label :priority %>
    <%= f.select :priority, Task.priorities.keys %>
  </div>
  <div>
    <%= f.submit '提交' %>
  </div>
<% end %>