<%= form_with model: task, local: true do |f| %>
  <% if task.errors.any? %>
  <ul>
    <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div>
    <%= f.label :name, t("task.name") %>
    <%= f.text_field :name, id: "task_name" %>
  </div>
  <div>
    <%= f.label :description, t("task.description") %>
    <%= f.text_area :description, id: "task_description" %>
  </div>
  <div>
    <%= f.label :start_at, t("task.start_at") %>
    <%= f.datetime_field :start_at, id: "task_start" %>
  </div>
  <div>
    <%= f.label :end_at, t("task.end_at") %>
    <%= f.datetime_field :end_at, id: "task_end" %>
  </div>
  <div>
    <%= f.label :status, t("task.status") %>
    <%= f.select :status, Task.statuses.keys, id: "task_status" %>
  </div>
  <div>
    <%= f.label :priority, t("task.priority") %>
    <%= f.select :priority, Task.priorities.keys, id: "task_priority" %>
  </div>
  <div>
    <%= f.submit t("button.submit") %>
  </div>
<% end %>