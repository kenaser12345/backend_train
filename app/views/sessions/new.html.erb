<h1><%= t("session.login") %></h1>

<%= form_with model: @user, url: login_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :email, t("user.email") %>
    <%= f.text_field :email, class: "form-control", id: "email_input"%>
  </div>
  <div class="form-group">
    <%= f.label :password, t("user.password") %>
    <%= f.password_field :password, class: "form-control", id: "password_input"%>
  </div>
  <%= f.submit t("button.submit"), class: "btn btn-secondary"%>
<% end %>

<%= link_to "註冊", new_user_path %>