

<table class="table table-striped">
  <thead>
    <td><%= t("user.name") %></td>
    <td><%= t("user.email") %></td>
    <td><%= t("user.created_at") %></td>
    <td><%= t("user.tasks_count") %></td>
    <td></td>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.created_at %>
        </td>
        <td>
          <%= user.tasks.count %>
        </td>
        <td>
          <%= link_to t("show"), admin_user_path(user) %>
          <%= link_to t("edit"), edit_admin_user_path(user) %>
          <%= link_to t("delete"), admin_user_path(user), data: {method: "DELETE", confirm: t("user.delete_confirm")} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>