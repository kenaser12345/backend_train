<%= form_with model: user, local: true do |f| %>
  <% if user.errors.any? %>
  <ul>
    <% user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class="form-group">
    <%= f.label :name, t("user.name"), class:"form-label form_title"  %>
    <%= f.text_field :name, id: "user_name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, t("users.password"), class:"form-label form_title" %>
    <%= f.password_field :password, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :email, t("users.email") %>
    <%= f.text_field :email, class: "form-control"%>
  </div>    
    <%= f.submit t("button.submit"), class: "btn btn-secondary" %>
  </div>
<% end %>